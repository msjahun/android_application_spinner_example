<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Register to CMPE419 Course" />

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Your Full Name"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerMain"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="103dp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="149dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerMain"
        android:layout_below="@+id/editTextUsername"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="194dp"
        android:layout_marginEnd="66dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinnerMain"
        android:layout_marginBottom="146dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/checkBoxTermsAndConditions"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextFullName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        android:text="I accept terms and conditions" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="58dp"
        android:text="Login" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextMobileNumber"
        android:layout_alignTop="@+id/buttonLogin"
        android:text="Register" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/editTextMobileNumber"
        android:layout_toStartOf="@+id/editTextMobileNumber" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignTop="@+id/spinnerMain"
        android:text="Gender" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextUsername"
        android:layout_alignStart="@+id/textView4"
        android:text="Username" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextPassword"
        android:layout_toStartOf="@+id/editTextMobileNumber"
        android:text="Password" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextEmailAddress"
        android:layout_toStartOf="@+id/editTextMobileNumber"
        android:text="Email" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextFullName"
        android:layout_toStartOf="@+id/editTextFullName"
        android:text="Full Name" />
</RelativeLayout>